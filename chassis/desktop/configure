#!/bin/sh

source lib/btrfs.sh
source lib/dnf.sh
source lib/flatpak.sh
source lib/systemd.sh

enable_coprs
install_packages
install_flatpaks

sudo cp -p /usr/share/ddcutil/data/45-ddcutil-i2c.rules /etc/udev/rules.d
sudo groupadd --system i2c
sudo usermod -aG i2c "$USER"

sudo usermod -aG dialout "$USER"

sudo cp -p "$WORKDIR"/files/snapback.conf /etc
create_subvols "$HOME"

enable_units

# Install scripts.
mkdir -p ~/.local/bin
cp -p "$WORKDIR"/files/bin/brightness ~/.local/bin
