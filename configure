#!/bin/sh

export CHASSIS="$(hostnamectl | awk '$1 == "Chassis:" {print $2}')"
export WORKDIR=.

source lib/dnf.sh
source lib/gsettings.sh
source lib/snap.sh
source lib/systemd.sh

configure() {
    [ ! -e "$2" ] && git clone https://github.com/jcrd/"$1" "$2"
    pushd "$2"
    ./configure
    popd
}

# Install and set up snapd.
dnf install snapd
[ ! -e /snap ] && sudo ln -s /var/lib/snapd/snap /snap

# Enable rpmfusion repos.
dnf install \
  https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm
dnf install \
  https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm

# Install codecs.
dnf install gstreamer1-plugins-{bad-\*,good-\*,base} gstreamer1-plugin-openh264 gstreamer1-libav \
  --exclude=gstreamer1-plugins-bad-free-devel
dnf group upgrade --with-optional Multimedia

# Enable google-chrome repo.
dnf config-manager --set-enabled google-chrome

# Enable vscode repo.
sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc
sudo cp files/vscode.repo /etc/yum.repos.d/vscode.repo

# Enable copr repos.
enable_coprs

# Install packages.
install_packages

# Copy files.
sudo cp -r files/nicety /etc

# Enable flathub.
sudo flatpak remote-modify --enable flathub

# Set default editor to code.
xdg-mime default code.desktop text/plain

# Set user's shell to zsh.
sudo usermod --shell /usr/bin/zsh "$USER"

# Enable systemd units.
enable_units

# Install snaps.
install_snaps

ln -s ~/snap/android-studio/current ~/Android

# Set gsettings.
set_gsettings

# Chassis-specific configuration.
export WORKDIR=chassis/"$CHASSIS"
if [ -e "$WORKDIR" ]; then
    ./"$WORKDIR"/configure
fi

# Configure dotfiles.
configure zsh-config ~/.config/zsh
configure neovim-config ~/.config/nvim
configure configs ~/.config/configs
